<!DOCTYPE html>
<html lang="en">
<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Homepage</title>
		<link rel="stylesheet" href="/vendors/css/bootstrap.css">
		<script src="/vendors/js/jquery.js"></script>
		<script src="/vendors/js/bootstrap.bundle.min.js"></script>
		<script src="/customs/js/index.js"></script>
</head>
<body>
		<%- include("partials/header") %>
		<h1 class="text-black text-center my-4">Homepage</h1>

		<div id="product_container" class="container text-center">
			<div class="row mx-5">
<% 				products.forEach(product => { %>
					<form action="/add-to-cart" method="post" class="checkout_form text-capitalize col-3 mb-2">
						<p class="text-truncate"><%= product.name %></p>
						<img class="product_image img-fluid" src="/images/<%= product.image_path %>" alt="" style="height: 200px;" data-bs-toggle="modal" data-bs-target="#show-image-modal">
						<p class="text-truncate"><%= product.description %></p>
						<p>$<%= product.price %></p>
						<div class="d-flex justify-content-between">
							<button type="button" class="btn btn-outline-dark decrement-button">-</button>
							<input name="quantity" class="quantity w-100 text-center" type="number" value="1" readonly>
							<button type="button" class="btn btn-outline-dark increment-button">+</button>
						</div>
						<input type="hidden" name="product_id" value="<%= product.id %>">
						<button class="btn btn-outline-dark w-100">Add to cart</button>
					</form>
<% 				}); %>
			</div>
		</div>

		<div class="modal fade" id="show-image-modal" tabindex="-1" aria-labelledby="modal-title" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title" id="modal-title"></h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body container">
						<img class="w-100" id="modal-image" src="" alt="" style="height: 300px; object-fit: cover;">
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					</div>
				</div>
			</div>
		</div>
</body>
</html>
